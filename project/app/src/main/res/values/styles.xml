<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Owntracks" parent="Theme.Owntracks.Base" />
    <color name="primary">#3f72b5</color>
    <color name="secondary">#305e9f</color>
    <color name="accent">@color/primary</color>

    <!-- Light Theme -->

    <color name="textPrimary">#de000000</color>
    <color name="textSecondary">#8a000000</color>
    <color name="buttonTint">@color/textSecondary</color>
    <color name="background">#fffafafa</color>
    <style name="Theme.Owntracks.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:actionModeBackground">@color/primary</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <!-- Dark Theme - see https://material.io/design/color/dark-theme.html -->

    <color name="textPrimaryDark">#deffffff</color>
    <color name="textSecondaryDark">#99ffffff</color>
    <color name="buttonTintDark">@color/textSecondaryDark</color>
    <color name="backgroundDark">#121212</color>

    <style name="Theme.Owntracks.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>
        <item name="android:actionModeBackground">@color/primary</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="popupMenuStyle">@style/PopupMenuDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="PopupMenuDark" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <!-- Misc -->

    <style name="ListItemPrimary" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="ListItemSecondary" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="RadioGroupItem">
        <item name="android:minHeight">@dimen/listitem_height</item>
        <item name="android:paddingBottom">@dimen/listitem_vertical_margin_choice</item>
        <item name="android:paddingLeft">@dimen/listitem_control_margin</item>
        <item name="android:paddingTop">@dimen/listitem_vertical_margin_choice</item>
    </style>

    <style name="DialogView">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
